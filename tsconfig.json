{
	"compilerOptions": {
		"baseUrl": "./slides/src/app/",
		"outDir": "./dist",
		"sourceMap": false,
		"declaration": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es5",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2017",
			"dom"
		],
		"paths": {
			"@angular/*": [
				"./slides/node_modules/@angular/*"
            ],
            "tns-core-modules":[
                "./slides/node_modules/tns-core-modules/*"
            ]
		}
	},
	"angularCompilerOptions": {
		"skipTemplateCodegen": true
	},
	"include": [
		"./slides/app/slidesModule"
	],
	"exclude": [
		"**/**.spec.ts",
		"**/app.module.ts",
		"**/app.component.ts",
        "**/app-routing.module.ts",
        "**/home/*"
	]
}